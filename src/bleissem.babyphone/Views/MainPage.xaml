<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bleissem.babyphone.Views.MainPage"
             xmlns:resource="clr-namespace:bleissem.babyphone.Resources"
             xmlns:prism="http://prismlibrary.com" xmlns:viewmodels="clr-namespace:bleissem.babyphone.ViewModels" x:DataType="viewmodels:MainPageViewModel"
             prism:ViewModelLocator.AutowireViewModel="True"             
             Title="{x:Static resource:AppResources.ApplicationName}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="{x:Static resource:AppResources.ChooseLabel}" />
        <Button Text="{x:Static resource:AppResources.ChooseContact}"></Button>
        <Label Text="{Binding SelectedContact}"></Label>
        <Label Text="{x:Static resource:AppResources.YouAreUsingLabel}"></Label>
        <Label Text="{Binding SelectedYouAreUsing}"></Label>
        <Label Text="{x:Static resource:AppResources.YouAreUsingLabel}"></Label>
        <Label Text="{Binding NoiseLevel}"></Label>
        <Button Text="{x:Static resource:AppResources.ChooseNoiseLevel}"></Button>
    </StackLayout>
</ContentPage>